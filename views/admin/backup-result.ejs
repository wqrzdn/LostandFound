<!-- Database Backup Results Page -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-check-circle text-success me-2"></i> Backup Complete</h1>
  <div>
    <a href="/admin/dashboard" class="btn btn-outline-primary me-2">
      <i class="fas fa-tachometer-alt me-1"></i> Dashboard
    </a>
    <a href="/" class="btn btn-outline-secondary">
      <i class="fas fa-home me-1"></i> Home
    </a>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header bg-light">
    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i> Backup Details</h4>
  </div>
  <div class="card-body">
    <div class="alert alert-success mb-4">
      <i class="fas fa-check-circle me-2"></i> Database backup was created successfully.
    </div>
    
    <div class="table-responsive">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th style="width: 40%">Filename</th>
            <td><%= result.filename || 'Unknown' %></td>
          </tr>
          <tr>
            <th>Size</th>
            <td><%= result.size ? (Math.round(result.size / 1024) + ' KB') : 'Unknown' %></td>
          </tr>
          <tr>
            <th>Creation Date</th>
            <td><%= new Date().toLocaleString() %></td>
          </tr>
          <tr>
            <th>Items Included</th>
            <td><span class="badge bg-primary"><%= result.itemCount || 0 %></span></td>
          </tr>
          <tr>
            <th>Users Included</th>
            <td><span class="badge bg-primary"><%= result.userCount || 0 %></span></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="text-center">
  <a href="/admin/backup" class="btn btn-primary me-2">
    <i class="fas fa-arrow-left me-1"></i> Back to Backups
  </a>
  <% if (result.filename) { %>
    <a href="/admin/backup/download/<%= result.filename %>" class="btn btn-success">
      <i class="fas fa-download me-1"></i> Download Backup
    </a>
  <% } %>
</div> 