<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-user-shield text-primary me-2"></i> Admin Dashboard</h1>
  <a href="/" class="btn btn-outline-primary">
    <i class="fas fa-home me-1"></i> Back to Home
  </a>
</div>

<!-- Dashboard Cards -->
<div class="row mb-4 g-4">
  <div class="col-md-4">
    <div class="card bg-primary text-white h-100">
      <div class="card-body text-center">
        <h1 class="display-4"><%= items.length %></h1>
        <h5>Total Items</h5>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card bg-danger text-white h-100">
      <div class="card-body text-center">
        <h1 class="display-4"><%= items.filter(item => item.type === 'Lost').length %></h1>
        <h5>Lost Items</h5>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card bg-success text-white h-100">
      <div class="card-body text-center">
        <h1 class="display-4"><%= items.filter(item => item.type === 'Found').length %></h1>
        <h5>Found Items</h5>
      </div>
    </div>
  </div>
</div>

<!-- Items Management Table -->
<div class="card">
  <div class="card-header bg-light">
    <h4 class="mb-0"><i class="fas fa-table me-2"></i> Manage Items</h4>
  </div>
  <div class="card-body">
    <% if (items && items.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Image</th>
              <th>Title</th>
              <th>Type</th>
              <th>Category</th>
              <th>Location</th>
              <th>Date</th>
              <th>Posted</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <% if (item.image1) { %>
                    <img src="<%= item.image1 %>" alt="<%= item.title %>" class="img-thumbnail" style="height: 50px; width: 50px; object-fit: cover;">
                  <% } else { %>
                    <i class="fas fa-image text-muted"></i>
                  <% } %>
                </td>
                <td><%= item.title %></td>
                <td>
                  <span class="badge <%= item.type === 'Lost' ? 'bg-danger' : 'bg-success' %>">
                    <%= item.type %>
                  </span>
                </td>
                <td><%= item.category %></td>
                <td><%= item.location %></td>
                <td><%= moment(item.date).format('MM/DD/YYYY') %></td>
                <td><%= moment(item.created_at).format('MM/DD/YYYY') %></td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/items/<%= item.id %>" class="btn btn-outline-primary">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/items/<%= item.id %>/edit" class="btn btn-outline-secondary">
                      <i class="fas fa-edit"></i>
                    </a>
                    <form action="/items/<%= item.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                      <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i> No items have been posted yet.
      </div>
    <% } %>
  </div>
</div> 