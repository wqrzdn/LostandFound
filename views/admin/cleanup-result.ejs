<!-- Database Cleanup Results Page -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-check-circle text-success me-2"></i> Cleanup Complete</h1>
  <div>
    <a href="/admin/dashboard" class="btn btn-outline-primary me-2">
      <i class="fas fa-tachometer-alt me-1"></i> Dashboard
    </a>
    <a href="/" class="btn btn-outline-secondary">
      <i class="fas fa-home me-1"></i> Home
    </a>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header bg-light">
    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i> Operation Summary</h4>
  </div>
  <div class="card-body">
    <div class="alert alert-success">
      <i class="fas fa-check-circle me-2"></i> Database cleanup was completed successfully.
    </div>
    
    <div class="table-responsive">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th style="width: 40%">Database Type</th>
            <td><%= database %></td>
          </tr>
          <tr>
            <th>Operation Date</th>
            <td><%= new Date().toLocaleString() %></td>
          </tr>
          <tr>
            <th>Backup Created</th>
            <td>
              <% if (result.backupCreated) { %>
                <span class="badge bg-success">Yes</span>
                <small class="ms-2 text-muted"><%= result.backupFile || 'Unknown filename' %></small>
              <% } else { %>
                <span class="badge bg-danger">No</span>
              <% } %>
            </td>
          </tr>
          <tr>
            <th>Items Deleted</th>
            <td><span class="badge bg-danger"><%= result.deletedItems || 0 %></span></td>
          </tr>
          <tr>
            <th>Items Remaining</th>
            <td><span class="badge bg-primary"><%= result.remainingItems || 0 %></span></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="text-center">
  <a href="/admin/cleanup" class="btn btn-primary">
    <i class="fas fa-arrow-left me-1"></i> Back to Cleanup
  </a>
</div> 