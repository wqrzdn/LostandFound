<!-- Admin Header Partial -->
<!-- This will ensure consistent header on all admin pages -->

<!-- Logout button and user info for Admin pages -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-shield-alt text-primary me-2"></i> Admin Panel</h2>
  <div>
    <% if (typeof user !== 'undefined' && user) { %>
      <div class="dropdown d-inline-block">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fas fa-user-circle me-1"></i> <%= user.name %>
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuButton">
          <li><a class="dropdown-item" href="/admin/dashboard"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
        </ul>
      </div>
    <% } %>
    <a href="/admin/dashboard" class="btn btn-outline-primary ms-2">
      <i class="fas fa-home me-1"></i> Dashboard
    </a>
  </div>
</div>
