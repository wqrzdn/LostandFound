<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow border-0">
        <div class="card-body p-5 text-center">
          <% if (error.status === 404) { %>
            <i class="fas fa-map-signs text-warning fa-5x mb-4"></i>
            <h1 class="mb-4">Page Not Found</h1>
            <p class="lead">The page you're looking for doesn't seem to exist.</p>
          <% } else { %>
            <i class="fas fa-exclamation-circle text-danger fa-5x mb-4"></i>
            <h1 class="mb-4">Oops! Something went wrong</h1>
            <p class="lead">We're sorry, but there was an error processing your request.</p>
            <% if (error.message) { %>
              <div class="alert alert-danger mt-4">
                <strong>Error:</strong> <%= error.message %>
              </div>
            <% } %>
          <% } %>
          
          <div class="mt-5">
            <a href="/" class="btn btn-primary me-2">
              <i class="fas fa-home me-1"></i> Go to Homepage
            </a>
            <a href="/items" class="btn btn-outline-primary">
              <i class="fas fa-search me-1"></i> Browse Items
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 